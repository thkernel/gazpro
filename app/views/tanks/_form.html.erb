<%= form_with(model: tank, local: false) do |form| %>
  <div class="modal-body">
     <ul class="errors">
      </ul>

  <div class="form-group">
    <%= form.label :registration_number, "N°Immatriculation", class: "required" %>
    <%= form.text_field :registration_number , class: "form-control", placeholder: "N°Immatriculation", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :brand , "Marque" %>
    <%= form.text_field :brand , class: "form-control", placeholder: "Marque" %>
  </div>

  <div class="form-group">
    <%= form.label :model, "Modèle" %>
    <%= form.text_field :model , class: "form-control", placeholder: "Modèle" %>
  </div>

  <div class="form-group">
    <%= form.label :capacity, "Capacité", class: "required" %>
    <%= form.number_field :capacity , class: "form-control", placeholder: "Capacité", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :unity_id , "Unité", class: "required" %>
    <%= form.collection_select(:unity_id, @unities, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true) %> 
  </div>

  

  </div><!-- modal body -->
            <div class="modal-footer">
            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
