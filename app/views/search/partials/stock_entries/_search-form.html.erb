<div class="search-form">
    <%= form_with url: history_stock_entries_path, method: :get, local: true, class: "form-inlinee" do |f| %>
        <div class="row">
            
            <div class="col-md-4">
                <div class="form-group">
                    <%= f.label "Date début" %>
                    <%= f.date_field :start_date, id: :start_date, class: "form-control ", value: @selected_start_date  %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <%= f.label "Date fin" %>
                    <%= f.date_field :end_date, id: :end_date, class: "form-control ", value: @selected_end_date  %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group customSelect">
                    <%= f.label "Produit" %>
                    <%= f.collection_select(:product, @products, :id, :name , {prompt: "Sélectionner", selected: (@selected_product if @selected_product.present?)},class: "form-control") %> 
                </div>
            </div>
            
            
            

           
            
                    
                
        </div><!-- end row -->
            
   
            


        <div class="row">
            <div class="col-md-12">
                <div class="form-group search-btn">
                    <%= f.submit "Rechercher", class: "btn btn-primary btn-block", :id => "search-button" %>
                </div>
            </div>
        </div>
       

        
    <% end %>
</div>