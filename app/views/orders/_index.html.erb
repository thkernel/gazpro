<% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= order.uid %></td>
        <td><%= order.order_date.strftime("%d/%m/%Y") %></td>
        <td><%= order.customer.full_name %></td>
        
        <td><%= order.transporter %></td>
        <td><%= order.delivery_note_number %></td>
        
        <td><%= number_to_currency order.entry_b3, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.entry_b6, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.entry_b12, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.entry_b32, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.entry_b38, unit: "", seperator: ",", delimiter: " " %></td>
        
        <td><%= number_to_currency order.out_b3, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.out_b6, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.out_b12, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.out_b32, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency  order.out_b38 , unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= number_to_currency order.total_tonnage , unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= order.status %></td>
        <td>
          <div class="action-buttons">
          <!-- link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'), edit_order_path(order), title: "Modifier", remote: true -->

<%= link_to raw('<i class="fas fa-receipt tx-20 aria-hidden="true" ></i>
'), order_path(order), title: "Voir", remote: false, class: "mg-r-4 mg-l-4" %>




<%= link_to raw('<i class="far fa-trash-alt" aria-hidden="true"></i>
'), order_delete_path(order), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
      </tr>
    <% end %>