<%= form_with(model: order, local: false) do |form| %>
  <div class="modal-body">
     <ul class="errors">
      </ul>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :order_date, "Date" , class: "required" %>
            <%= form.date_field :order_date, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group customSelect">
            <%= form.label :customer_id, "Client", class: "required" %>
            <%= form.collection_select(:customer_id, @customers, :id, :full_name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%;", required: true) %> 
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :delivery_note_number , "N°BL"%>
            <%= form.text_field :delivery_note_number , class: "form-control", placeholder: "N°BL" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :transporter , "Transporteur", class: "required" %>
            <%= form.text_field :transporter, class: "form-control", placeholder: "Transporteur", required: true %>
          </div>
        </div>
      </div>

  <fieldset>
