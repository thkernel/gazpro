          <%= form.label :entry_b32, "B32" %>
          <%= form.number_field :entry_b32, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= form.label :entry_b38, "B38" %>
          <%= form.number_field :entry_b38 , class: "form-control" %>
        </div>
      </div>
    </div>
  </fieldset>

