$("ul.errors").html("");
<% if @order.errors.any? %>
  <% @order.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="alert alert-danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".orders").html("<%= escape_javascript(render 'index') %>");
  $("#order-modal").modal("hide");
 
<% end %>