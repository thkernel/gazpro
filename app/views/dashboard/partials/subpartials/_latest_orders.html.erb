<div class="col-lg-12">
  <!-- Due tasks -->
  <div class="card shadow-base bd-0">
    <div class="card-header pd-20 bg-transparent">
      <h6 class="card-title tx-uppercase tx-12 mg-b-0">Dernières ventes</h6>
    </div><!-- card-header -->
    <table class="table table-responsive mg-b-0 tx-12">
      <thead>
        <tr class="tx-10">
          <th class="pd-y-5">Date</th>
          <th class="pd-y-5">Réf</th>
          <th class="pd-y-5">Date commande</th>
          <th class="pd-y-5">Client</th>
          <th class="pd-y-5">Transporteur</th>
          <th class="pd-y-5">N°BL</th>
          <th class="pd-y-5">Entrée B3</th>
          <th class="pd-y-5">Entrée B6</th>
          <th class="pd-y-5">Entrée B12</th>
          <th class="pd-y-5">Entrée B32</th>
          <th class="pd-y-5">Entrée B38</th>
          <th class="pd-y-5">Sortie B3</th>
          <th class="pd-y-5">Sortie B6</th>
          <th class="pd-y-5">Sortie B12</th>
          <th class="pd-y-5">Sortie B32</th>
          <th class="pd-y-5">Sortie B38</th>
          <th class="pd-y-5">Tonnage total</th>
          <th class="pd-y-5">Statut</th>
        </tr>
      </thead>
      <tbody>
        <% @latest_orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= order.uid %></td>
            <td><%= order.order_date.strftime("%d/%m/%Y") %></td>
            <td><%= order.customer.full_name %></td>
            
            <td><%= order.transporter %></td>
            <td><%= order.delivery_note_number %></td>
            
            <td><%= order.entry_b3 %></td>
            <td><%= order.entry_b6 %></td>
            <td><%= order.entry_b12 %></td>
            <td><%= order.entry_b32 %></td>
            <td><%= order.entry_b38 %></td>
            
            <td><%= order.out_b3 %></td>
            <td><%= order.out_b6 %></td>
            <td><%= order.out_b12 %></td>
            <td><%= order.out_b32 %></td>
            <td><%= order.out_b38 %></td>
            <td><%= number_to_currency order.total_tonnage , unit: "", seperator: ",", delimiter: " " %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>       
      </tbody>
    </table>
              
    <div class="card-footer tx-12 pd-y-15 bg-transparent">
     <!-- <a href=""><i class="fa fa-angle-down mg-r-5"></i>Voir tout</a> -->
     <%= link_to raw('<i class="fa fa-angle-down mg-r-5"></i>Toutes les ventes'), orders_path %>
    </div><!-- card-footer -->
  </div>
</div>
